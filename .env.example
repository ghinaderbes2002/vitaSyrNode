# ===================================
# VitaSyr Application Configuration
# ===================================

# Database Configuration (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=SecurePassword123!ChangeThis
POSTGRES_DB=vitasyr
POSTGRES_PORT=5432

# Database URL for Prisma (automatically configured in docker-compose)
DATABASE_URL=postgresql://postgres:SecurePassword123!ChangeThis@postgres:5432/vitasyr?schema=public

# Application Configuration
APP_PORT=3000
NODE_ENV=production
PORT=3000

# JWT Secret (IMPORTANT: Change this to a secure random string!)
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-this-to-a-secure-random-string-use-command-above

# Timezone
TZ=UTC
