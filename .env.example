# ===================================
# VitaSyr Application Configuration
# ===================================

# Database Configuration (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=2025$Secure
POSTGRES_DB=vitasyr
POSTGRES_PORT=5432

# Database URL for Prisma (automatically configured in docker-compose)
DATABASE_URL=postgresql://postgres:2025$SecureChangeThis@postgres:5432/vitasyr?schema=public

# Application Configuration
APP_PORT=3010
NODE_ENV=production
PORT=3010

# JWT Secret (IMPORTANT: Change this to a secure random string!)
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-this-to-a-secure-random-string-use-command-above

# Email (Hostinger SMTP)
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=465
EMAIL_USER=your-email@yourdomain.com
EMAIL_PASSWORD=your-email-password
CONTACT_RECEIVER_EMAIL=info@yourdomain.com

# Timezone
TZ=UTC
